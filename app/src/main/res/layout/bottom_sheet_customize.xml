<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingBottom="16dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="#E0E0E0"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_gallery"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00₺"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#E69248"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:id="@+id/groupBurger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"> <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Burger Size"
                android:background="#FCEDDD"
                android:padding="8dp"
                android:textStyle="bold"/>
                <RadioGroup
                    android:id="@+id/rgBurgerSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton android:id="@+id/rbBurger120" android:text="120 g" android:checked="true" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <RadioButton android:id="@+id/rbBurger180" android:text="180 g (+50₺)" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remove Ingredients"
                    android:background="#FCEDDD"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
                <CheckBox android:id="@+id/cbNoOnion" android:text="No Onion" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <CheckBox android:id="@+id/cbNoPickle" android:text="No Pickles" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/groupPizza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pizza Size"
                    android:background="#FCEDDD"
                    android:padding="8dp"
                    android:textStyle="bold"/>
                <RadioGroup
                    android:id="@+id/rgPizzaSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton android:id="@+id/rbPizzaSmall" android:text="Small" android:checked="true" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <RadioButton android:id="@+id/rbPizzaMedium" android:text="Medium (+40₺)" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <RadioButton android:id="@+id/rbPizzaLarge" android:text="Large (+70₺)" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Crust Selection"
                    android:background="#FCEDDD"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
                <RadioGroup
                    android:id="@+id/rgPizzaCrust"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton android:id="@+id/rbThinCrust" android:text="Thin Crust" android:checked="true" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <RadioButton android:id="@+id/rbThickCrust" android:text="Thick Crust" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/groupDrink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Size Selection"
                    android:background="#FCEDDD"
                    android:padding="8dp"
                    android:textStyle="bold"/>
                <RadioGroup
                    android:id="@+id/rgDrinkSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton android:id="@+id/rbDrinkSmall" android:text="Standard (330ml)" android:checked="true" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <RadioButton android:id="@+id/rbDrinkLarge" android:text="Large (500ml) (+15₺)" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                </RadioGroup>

                <CheckBox android:id="@+id/cbNoIce" android:text="No Ice" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnMinus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back"
            android:rotation="270"
            android:padding="4dp"
            android:background="@drawable/bg_search_rounded"
            android:backgroundTint="#F0F0F0"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/btnPlus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back"
            android:rotation="90"
            android:padding="4dp"
            android:background="@drawable/bg_search_rounded"
            android:backgroundTint="#E69248"
            android:clickable="true"/>

        <Button
            android:id="@+id/btnAddToCartFinal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add to Cart"
            android:backgroundTint="#E69248"
            android:layout_marginStart="24dp"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</LinearLayout>